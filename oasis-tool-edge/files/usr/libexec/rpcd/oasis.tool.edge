#!/usr/bin/env lua

local jsonc = require("luci.jsonc")

local methods = {
    function_calling = {
        args = { tool = "a_string", param = "a_string" },

        call = function(args)
            local uci = require("luci.model.uci").cursor()
            local jsonc = require("luci.jsonc")

            local info = uci:get_all("oasis") or {}

            -- Search for the tool definition
            local target_def
            for sect, _ in pairs(info) do
                local target = info[sect]
                if target and tostring(target[".type"]) == "tool" and target.name == args.tool then
                    target_def = target
                    break
                end
            end

            local r = {}

            if not target_def then
                r.result = jsonc.stringify({error = "Not Found"})
                return r
            end

            if target_def.enable then
                r.result = jsonc.stringify({error = "Execution of the specified tool is prohibited."})
            end

            -- 1) Try requiring the server as a Lua module and invoke it
            if target_def.server then
                local ok, mod = pcall(require, target_def.server)
                if ok then
                    -- If the module is a function itself
                    if type(mod) == "function" then
                        local succ, res = pcall(mod, { tool = args.tool, param = args.param })
                        if succ then
                            r.result = jsonc.stringify(res or { status = "OK" })
                            return r
                        else
                            r.result = jsonc.stringify({ status = "module call failed", error = tostring(res) })
                            return r
                        end
                    end

                    -- If it's a table, try common callable fields (call/run/main)
                    if type(mod) == "table" then
                        local fn = mod.call or mod.run or mod.main
                        if type(fn) == "function" then
                            local succ, res = pcall(fn, { tool = args.tool, param = args.param })
                            if succ then
                                r.result = jsonc.stringify(res or { status = "OK" })
                                return r
                            else
                                r.result = jsonc.stringify({ status = "module call failed", error = tostring(res) })
                                return r
                            end
                        end
                    end
                end
            end

            -- 2) Try calling via ubus using luci.util.ubus
            local util = require("luci.util")
            local success, ret = pcall(function()
                -- Many ubus services use different method names; try 'call' and adjust if needed
                return util.ubus(target_def.server, "call", { tool = args.tool, param = args.param }) or {}
            end)

            if success then
                r.result = jsonc.stringify(ret)
                return r
            else
                r.result = jsonc.stringify({ status = "ubus call failed", error = tostring(ret) })
                return r
            end

            -- If no executable server was found
            r.result = jsonc.stringify({ status = "No executable server for tool", server = tostring(target_def.server) })
            return r
        end
    },
}

local function parseInput()

    local parse = jsonc.new()
    local done, err

    while true do
        local chunk = io.read(4096)
        if not chunk then
            break
        elseif not done and not err then
            done, err = parse:parse(chunk)
        end
    end

    if not done then
        print(jsonc.stringify({
            error = err or "Incomplete input for argument parsing"
        }))
        os.exit(1)
    end

    return parse:get()
end

-- validation
local function validateArgs(func, uargs)

    local method = methods[func]
    if not method then
        print(jsonc.stringify({error = "Method not found in methods table"}))
        os.exit(1)
    end

    local n = 0
    for _, _ in pairs(uargs) do n = n + 1 end

    if method.args and n == 0 then
        print(jsonc.stringify({
            error = "Received empty arguments for " .. func ..
                " but it requires " .. jsonc.stringify(method.args)
        }))
        os.exit(1)
    end

    uargs.ubus_rpc_session = nil

    local margs = method.args or {}
    for k, v in pairs(uargs) do
        if margs[k] == nil or (v ~= nil and type(v) ~= type(margs[k])) then
            print(jsonc.stringify({
                error = "Invalid argument '" .. k .. "' for " .. func ..
                    " it requires " .. jsonc.stringify(method.args)
            }))
            os.exit(1)
        end
    end

    return method
end

-- ubus list & call
if arg[1] == "list" then
    local _, rv = nil, {}
    for _, method in pairs(methods) do rv[_] = method.args or {} end
    print((jsonc.stringify(rv):gsub(":%[%]", ":{}")))
elseif arg[1] == "call" then
    local args = parseInput()
    local method = validateArgs(arg[2], args)
    local run = method.call(args)
    print(run.result)
    os.exit(run.code or 0)
end
